<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!--Preference section-->

    <!--Dependency injection configuration that tell ObjectManager which class should be injected-->
    <!--if a constructor has dependency from "for".-->
    <preference for="LizardMedia\Sample\Api\ConfigProviderInterface"
                type="LizardMedia\Sample\Helper\ConfigProvider" />

    <preference for="LizardMedia\Sample\Api\Data\SampleInterface"
                type="LizardMedia\Sample\Model\Data\Sample" />

    <preference for="LizardMedia\Sample\Api\Data\SampleRepositoryInterface"
                type="LizardMedia\Sample\Model\SampleRepository" />

    <preference for="LizardMedia\Sample\Api\Data\SampleSearchResultInterface"
                type="LizardMedia\Sample\Model\Data\SampleSearchResult" />


    <!--You can also use preference to overwrite a class-->
    <preference for="Magento\Catalog\Controller\Adminhtml\Product\Save"
                type="LizardMedia\Sample\Controller\Adminhtml\Product\Save" />

    <!--End of preference section-->


    <!--UI component listing data providers section-->

    <!--Virtual type is a class that doesn't exist as a file but can be injected if necessary. We define the data providers-->
    <!--for our listing, filters pools collections used by the listing.-->
    <virtualType name="SamplesGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">LizardMedia\Sample\Model\ResourceModel\Sample\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">SamplesGridFilterPool</argument>
        </arguments>
    </virtualType>

    <virtualType name="SamplesGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="sample_listing_data_source" xsi:type="string">LizardMedia\Sample\Model\ResourceModel\Sample\Grid\Collection</item>
            </argument>
        </arguments>
    </type>

    <virtualType name="LizardMedia\Sample\Model\ResourceModel\Sample\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">lizardmedia_sample</argument>
            <argument name="resourceModel" xsi:type="string">LizardMedia\Sample\Model\ResourceModel\Sample</argument>
        </arguments>
    </virtualType>
    <!--End of UI component listing data providers section-->

    <!--Logger virtual type-->
    <virtualType name="sampleLogger" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="handlers"  xsi:type="array">
                <item name="debug" xsi:type="object">LizardMedia\Sample\Logger\Handler\Sample</item>
            </argument>
        </arguments>
    </virtualType>
    <!--End of logger virtual type-->

    <!--Dependency injection section-->
    <type name="LizardMedia\Sample\Observer\ProductSaveController">
        <arguments>
            <argument name="logger" xsi:type="object">sampleLogger</argument>
        </arguments>
    </type>

    <type name="LizardMedia\Sample\Plugin\ProductResource">
        <arguments>
            <argument name="logger" xsi:type="object">sampleLogger</argument>
        </arguments>
    </type>
    <!--End of dependency injection section-->

    <!--Plugins section-->
    <type name="Magento\Catalog\Model\ResourceModel\Product">
        <plugin name="lizardmedia_sample_productresource" type="LizardMedia\Sample\Plugin\ProductResource" sortOrder="1" />
    </type>
    <!--End of plugins section-->
    
</config>