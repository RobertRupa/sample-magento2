                type="LizardMedia\Sample\Helper\ConfigProvider" />

    <preference for="LizardMedia\Sample\Api\Data\SampleInterface"
                type="LizardMedia\Sample\Model\Data\Sample" />

    <preference for="LizardMedia\Sample\Api\Data\SampleRepositoryInterface"
                type="LizardMedia\Sample\Model\SampleRepository" />

    <preference for="LizardMedia\Sample\Api\Data\SampleSearchResultInterface"
                type="LizardMedia\Sample\Model\Data\SampleSearchResult" />

    <!--End of preference section-->

</config>